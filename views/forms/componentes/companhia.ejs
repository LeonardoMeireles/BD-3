<div class="item">
    <p>Nome</p>
    <% if( action === 'add') { %>
        <input type="text" name="nome" required/>
    <% } else { %>
        <input type="text" name="nome" value=<%= companhia.nome %> required/>
    <% } %>
</div>
<div class="item">
    <p>CNPJ</p>
    <% if( action === 'add') { %>
        <input type="number" name="cnpj" required/>
    <% } else { %>
        <input type="number" name="cnpj" value=<%= companhia.cnpj %> required/>
    <% } %>
</div>
<div class="item">
    <p>País de Origem</p>
    <select required>
            <option disabled selected>Selecione Origem</option>
        <% for (country of countries) { %>
            <option value="<%= country %>"> <%= country %> </option>
        <% } %>
    </select>
</div>
<div class="item">
    <p>Descrição</p>
    <% if( action === 'add') { %>
        <input type="text" name="nome"/>
    <% } else { %>
        <input type="text" name="nome" value=<%= companhia.descricao %>/>
    <% } %>
</div>