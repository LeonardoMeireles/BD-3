  <script>
    function extraviada() {
        if (option === "sim") {
            document.getElementById("extraviada").style.display = "";
        } else {
            document.getElementById("extraviada").style.display = "none";
        }
    }

    function cargo() {
        if (option === "atendente") {
            document.getElementById("atendente").style.display = "";
        } else {
            document.getElementById("atendente").style.display = "none";
        }
    }
  </script>
  <body>
    <!-- Navbar -->
    <div class="w3-top navbar">
        <div class="w3-bar w3-blue w3-card w3-left-align w3-large navbar">
