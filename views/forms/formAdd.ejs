                <%- include('./componentes/bagagem.ejs') %>
            <% } else if(tabela === 'passageiro') { %>
                <%- include('./componentes/passageiro.ejs') %>
            <% } else if(tabela === 'voo') { %>
                <%- include('./componentes/voo.ejs') %>
            <% } %>
            <div class="btn-block">
                <button type="submit" href="/">Send Application</button>
