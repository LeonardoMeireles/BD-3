            <a href="/" class="w3-bar-item w3-button w3-padding-large">Home</a>
        </div>
    </div>
      
    <div class="testbox">
        <form action="/">
            <header class="background-image">
                <h1 id="logoName" class="w3-jumbo">Adicionar <%= tabela %></h1>
            </header>
            <% if(tabela === 'aviao') { %>
                <%- include('./componentes/aviao.ejs') %>
            <% } else if(tabela === 'companhia') { %>
